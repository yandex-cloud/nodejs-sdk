{
  "compilerOptions": {
    "target": "es6",
    "module": "NodeNext",
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": ["es6"],
    "disableSizeLimit": true,
    "moduleResolution": "nodenext"
  }
}
