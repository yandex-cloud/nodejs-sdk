{
  "compilerOptions": {
    "target": "es6",
    "module": "NodeNext",
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": ["es6"],
    "disableSizeLimit": true,
    "moduleResolution": "nodenext",
    "outDir": "./dist"
  },
  "include": ["./src"],
  "exclude": ["./src/**.test.*"],
  "ts-node": {
    "compilerOptions": {
      "target": "ES2021",
      "module": "NodeNext",
      "allowJs": true,
      "declaration": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "lib": ["ES2021", "DOM"],
      "disableSizeLimit": true
    }
  }
}
